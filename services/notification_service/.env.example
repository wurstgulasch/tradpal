# Notification Service Configuration
# Copy this file to .env and fill in your values

# Service Configuration
NOTIFICATION_MAX_WORKERS=3
NOTIFICATION_QUEUE_SIZE=100
NOTIFICATION_DEFAULT_CHANNELS=telegram,email
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=1.0
NOTIFICATION_MAX_RETRY_DELAY=60.0

# Rate Limits (messages per minute)
NOTIFICATION_RATE_LIMIT_TELEGRAM=10
NOTIFICATION_RATE_LIMIT_DISCORD=10
NOTIFICATION_RATE_LIMIT_EMAIL=5
NOTIFICATION_RATE_LIMIT_SMS=2

# Telegram Integration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_default_chat_id_here

# Discord Integration
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Email Integration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# SMS Integration (if available)
SMS_API_KEY=your_sms_api_key_here
SMS_API_URL=https://api.smsprovider.com/send
SMS_FROM_NUMBER=+1234567890

# Redis Configuration (optional, for advanced caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/notification_service.log

# Security
API_KEY=your_api_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Service URLs
EVENT_SYSTEM_URL=http://localhost:8000/events
RISK_SERVICE_URL=http://localhost:8002/risk

# Development/Testing
DEBUG=false
TEST_MODE=false