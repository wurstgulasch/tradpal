# Environment Variables for TradPal Indicator
# Copy this file to .env and fill in your actual values

# API Keys for exchanges (if required)
TRADPAL_API_KEY=your_api_key_here
TRADPAL_API_SECRET=your_api_secret_here

# ========================================
# INTEGRATION CONFIGURATION
# ========================================

# Telegram Bot Configuration (for signal notifications)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get chat ID by messaging your bot and running:
# python scripts/manage_integrations.py --get-chat-id
TELEGRAM_CHAT_ID=your_chat_id_here

# Email Integration (planned)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECIPIENTS=trader1@example.com,trader2@example.com

# Discord Integration (planned)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Generic Webhook Integration (planned)
WEBHOOK_URL=https://your-trading-platform.com/webhook
WEBHOOK_SECRET=your_webhook_secret_here

# ========================================
# TRADING & SYSTEM CONFIGURATION
# ========================================

# Logging configuration
LOG_LEVEL=INFO

# Advanced Trading Settings
ENABLE_MTA=true
ADX_THRESHOLD=25
FIBONACCI_LEVELS=161.8,261.8

# Backtesting Parameters
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# Risk Management
CAPITAL=10000
RISK_PER_TRADE=0.01

# Optional: Proxy settings
HTTP_PROXY=
HTTPS_PROXY=

# Optional: Custom data source
DATA_SOURCE_URL=

# API Rate Limiting
API_REQUESTS_PER_MINUTE=60
API_REQUESTS_PER_HOUR=1000

# Data Caching
ENABLE_DATA_CACHING=true
CACHE_EXPIRY_HOURS=24

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING=true
PERFORMANCE_LOG_INTERVAL=300