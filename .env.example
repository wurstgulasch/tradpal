# TradPal Indicator Environment Configuration
# Copy this file to .env and configure your settings

# ==========================================
# EXCHANGE API CONFIGURATION
# ==========================================

# Kraken Exchange (Primary)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Binance Exchange (Alternative)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase Pro Exchange (Alternative)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# ==========================================
# SENTIMENT ANALYSIS APIs
# ==========================================

# Twitter/X API (for social sentiment)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# News API (for financial news sentiment)
NEWS_API_KEY=your_news_api_key_here

# Reddit API (for community sentiment)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# ==========================================
# INTEGRATION APIs
# ==========================================

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Webhook (for notifications)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Email Integration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# SMS Integration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
SMS_RECIPIENT=+0987654321

# ==========================================
# SECURITY & SECRETS MANAGEMENT
# ==========================================

# Secrets Backend (env, vault, aws-secretsmanager)
SECRETS_BACKEND=env

# HashiCorp Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# AWS Secrets Manager Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/tradpal_indicator.log

# Prometheus Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000

# System Monitoring
MONITORING_STACK_ENABLED=false

# Deployment Environment
DEPLOYMENT_ENV=local

# ==========================================
# PERFORMANCE & CACHING
# ==========================================

# Redis Caching (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
ADAPTIVE_RATE_LIMITING_ENABLED=true
RATE_LIMIT_MAX_RETRIES=5
RATE_LIMIT_BASE_BACKOFF=2.0
RATE_LIMIT_MAX_BACKOFF=300

# ==========================================
# WEB UI CONFIGURATION
# ==========================================

# Streamlit Web UI
WEB_UI_ENABLED=true
WEB_UI_PORT=8501
WEB_UI_HOST=localhost

# Flask Authentication
SECRET_KEY=your_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production

# Default Admin Credentials (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ==========================================
# ML & AI CONFIGURATION
# ==========================================

# Machine Learning
ML_ENABLED=true
ML_MODEL_DIR=cache/ml_models
ML_CONFIDENCE_THRESHOLD=0.6
ML_TRAINING_HORIZON=5
ML_RETRAINING_INTERVAL_HOURS=24
ML_MIN_TRAINING_SAMPLES=1000
ML_TEST_SIZE=0.2
ML_CV_FOLDS=5

# PyTorch Models
ML_USE_PYTORCH=false
ML_PYTORCH_MODEL_TYPE=lstm
ML_PYTORCH_HIDDEN_SIZE=128
ML_PYTORCH_NUM_LAYERS=2
ML_PYTORCH_DROPOUT=0.2
ML_PYTORCH_LEARNING_RATE=0.001
ML_PYTORCH_BATCH_SIZE=32
ML_PYTORCH_EPOCHS=100
ML_PYTORCH_EARLY_STOPPING_PATIENCE=10

# AutoML (Optuna)
ML_USE_AUTOML=false
ML_AUTOML_N_TRIALS=100
ML_AUTOML_TIMEOUT=3600
ML_AUTOML_STUDY_NAME=tradpal_automl
ML_AUTOML_SAMPLER=tpe
ML_AUTOML_PRUNER=median

# Ensemble Methods
ML_USE_ENSEMBLE=false
ML_ENSEMBLE_WEIGHTS={"ml": 0.6, "ga": 0.4}
ML_ENSEMBLE_VOTING=weighted
ML_ENSEMBLE_MIN_CONFIDENCE=0.7

# ==========================================
# TRADING CONFIGURATION
# ==========================================

# Trading Parameters
SYMBOL=BTC/USDT
EXCHANGE=kraken
TIMEFRAME=1h
CAPITAL=10000
RISK_PER_TRADE=0.01

# Multi-Timeframe Analysis
ENABLE_MTA=true
MTA_TIMEFRAMES=["5m", "15m"]

# Advanced Indicators
ENABLE_ADX=true
ADX_THRESHOLD=25
ENABLE_FIBONACCI=true
FIBONACCI_LEVELS=[161.8, 261.8]

# Risk Management
SL_MULTIPLIER=1.5
TP_MULTIPLIER=3.0
LEVERAGE_BASE=10
LEVERAGE_MIN=5
LEVERAGE_MAX=10

# Backtesting
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# ==========================================
# DEVELOPMENT & TESTING
# ==========================================

# Test Environment
TEST_ENVIRONMENT=false

# Performance Profiles
PERFORMANCE_PROFILE=heavy  # light or heavy

# Debug Mode
DEBUG=false

# ==========================================
# CONTAINER & DEPLOYMENT
# ==========================================

# Docker Configuration
DOCKER_BUILDKIT=1

# Kubernetes Configuration
KUBECONFIG_PATH=~/.kube/config

# AWS Deployment
AWS_EC2_INSTANCE_TYPE=t3.medium
AWS_EC2_AMI=ami-12345678
AWS_EC2_KEY_PAIR=your-key-pair

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Database Configuration (future use)
DATABASE_URL=sqlite:///tradpal.db
DATABASE_POOL_SIZE=10

# Message Queue (future use)
RABBITMQ_URL=amqp://localhost
REDIS_QUEUE_ENABLED=false

# ==========================================
# NOTIFICATIONS & ALERTS
# ==========================================

# Alert Thresholds
ALERT_PRICE_CHANGE_THRESHOLD=0.05  # 5% price change
ALERT_VOLUME_SPIKE_THRESHOLD=2.0   # 2x normal volume
ALERT_SENTIMENT_CHANGE_THRESHOLD=0.3  # 0.3 sentiment change

# Notification Channels
NOTIFICATION_TELEGRAM=true
NOTIFICATION_DISCORD=true
NOTIFICATION_EMAIL=false
NOTIFICATION_SMS=false

# ==========================================
# ADVANCED FEATURES
# ==========================================

# Walk-Forward Optimization
WALK_FORWARD_ENABLED=true
WALK_FORWARD_WINDOW_SIZE=30
WALK_FORWARD_STEP_SIZE=7
WALK_FORWARD_MIN_TRADES=10

# Genetic Algorithm
GA_ENABLED=true
GA_POPULATION_SIZE=50
GA_GENERATIONS=20
GA_MUTATION_RATE=0.1
GA_CROSSOVER_RATE=0.8

# Adaptive Optimization
ADAPTIVE_OPTIMIZATION_ENABLED=false
ADAPTIVE_OPTIMIZATION_INTERVAL_HOURS=24
ADAPTIVE_AUTO_APPLY_BEST=true
ADAPTIVE_MIN_PERFORMANCE_THRESHOLD=0.7

# ==========================================
# EXPERIMENTAL FEATURES
# ==========================================

# WebSocket Support
WEBSOCKET_ENABLED=false
WEBSOCKET_RECONNECT_ATTEMPTS=5
WEBSOCKET_RECONNECT_DELAY=5

# Real-time Sentiment
SENTIMENT_ENABLED=false
SENTIMENT_SOURCES=["twitter", "news", "reddit"]
SENTIMENT_HOURS_BACK=24
SENTIMENT_CONFIDENCE_THRESHOLD=0.6
SENTIMENT_SIGNAL_WEIGHT=0.3

# Portfolio Management (future)
PORTFOLIO_ENABLED=false
PORTFOLIO_MAX_POSITIONS=5
PORTFOLIO_REBALANCE_THRESHOLD=0.1

# ==========================================
# LEGACY COMPATIBILITY
# ==========================================

# Old configuration keys (for backward compatibility)
ENABLE_ML=true
ENABLE_WEB_UI=true
ENABLE_MONITORING=false